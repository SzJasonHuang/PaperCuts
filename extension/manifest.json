{
  "manifest_version": 3,
  "name": "Paper Cuts - PDF Optimizer",
  "version": "1.0.0",
  "description": "Reduce ink and paper usage with AI-powered PDF optimization",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:8080/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/papercut.png"
    }
  },
  "icons": {
    "16": "icons/papercut.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
